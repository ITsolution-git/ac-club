<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Account Tags -->
    <record id="st_tag_kh_01" model="account.account.tag">
        <field name="name">Standard Tax</field>
        <field name="applicability">taxes</field>
    </record>
    <!-- Account Tax Templates -->

    <record id="input_tax_15" model="account.tax.template">
        <field name="name">(standard)Tax @ 10%</field>
        <field name="description">(standard)Tax @ 15%</field>
        <field name="type_tax_use">sale</field>
        <field name="amount_type">percent</field>
        <field name="amount">10</field>
        <field name="sequence">1</field>
        <field name="account_id" ref="p11235"/>
        <field name="refund_account_id" ref="p20011"/>
        <field name="chart_template_id" ref="cambodian_chart_template_standard"/>
        <field name="tag_ids" eval="[(6, 0, [ref('st_tag_kh_01')])]"/>
    </record>
</odoo>
